# Echo Project - Shared Environment Variables
# These are defaults that can be overridden by service-specific .env files


# Shared Infrastructure
# Redis with password authentication (required for all environments)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=dev-redis-password
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=echo-files

# Shared Application Settings
NODE_ENV=development
LOG_LEVEL=info

# Email Configuration (for notification-service)
# Set USE_SMTP=true to use MailHog for testing, false to use Resend for production
USE_SMTP=false
SMTP_HOST=localhost
SMTP_PORT=1025
RESEND_API_KEY=your-resend-api-key-here
EMAIL_FROM_ADDRESS=noreply@echo.local
EMAIL_FROM_NAME=Echo Workspace

# Frontend URL Configuration
FRONTEND_BASE_URL=http://localhost:3000

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting (shared defaults)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain