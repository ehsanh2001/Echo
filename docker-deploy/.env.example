# =============================================================================
# Echo Demo Deployment - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values, OR set them as environment
# variables before running docker-compose.
#
# Required variables (no defaults):
#   - JWT_SECRET
#   - GMAIL_USER
#   - GMAIL_APP_PASSWORD
#   - EC2_PUBLIC_IP
# =============================================================================

# =============================================================================
# REQUIRED - Must be set
# =============================================================================

# JWT secret for authentication (generate a strong random string)
JWT_SECRET=change-this-to-a-secure-random-string-at-least-32-chars

# Gmail credentials for sending emails
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# EC2 public IP address (used for frontend URLs)
EC2_PUBLIC_IP=your-ec2-public-ip

# =============================================================================
# OPTIONAL - Have sensible defaults
# =============================================================================

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Database names
USERS_DB_NAME=users_db
WORKSPACE_CHANNELS_DB_NAME=workspace_channels_db
MESSAGE_DB_NAME=message_db

# Redis
REDIS_PASSWORD=redis123

# RabbitMQ
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=rabbitmq123

# JWT token expiry
JWT_ACCESS_TOKEN_EXPIRY_SECONDS=900
JWT_REFRESH_TOKEN_EXPIRY_SECONDS=604800
