# =============================================================================
# Echo K8s Local Infrastructure - Environment Variables
# =============================================================================
# Copy this file to .env.infra.local for custom values
# These values are used by docker-compose.infra.yml

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
# Using port 5433 to avoid conflict with dev environment (port 5432)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5433

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=dev-redis-password
REDIS_PORT=6379

# =============================================================================
# RabbitMQ Configuration
# =============================================================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=dev-rabbitmq-password
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672

# =============================================================================
# MailHog Configuration
# =============================================================================
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025
