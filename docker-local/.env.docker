# =============================================================================
# Docker Compose Environment Overrides
# =============================================================================
# This file overrides the project .env for Docker container networking
# Container names are used instead of localhost


# =============================================================================
# DATABASE (PostgreSQL container)
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432


# =============================================================================
# REDIS (Container name)
# =============================================================================
REDIS_HOST=redis
REDIS_PASSWORD=dev-redis-password
REDIS_PORT=6379


# =============================================================================
# RABBITMQ (Container name)
# =============================================================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=dev-rabbitmq-password
RABBITMQ_PORT=5672


# =============================================================================
# SERVICE URLS (Container names)
# =============================================================================
USER_SERVICE_URL=http://user-service:8001
WORKSPACE_CHANNEL_SERVICE_URL=http://workspace-channel-service:8002
MESSAGE_SERVICE_URL=http://message-service:8003
BFF_SERVICE_URL=http://bff-service:8004


# =============================================================================
# EMAIL (MailHog container)
# =============================================================================
SMTP_HOST=mailhog


# =============================================================================
# OPENTELEMETRY (Container name)
# =============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
