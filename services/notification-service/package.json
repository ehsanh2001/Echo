{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "Echo notification service - handles email notifications via SMTP (MailHog/Gmail)",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "build:tsc": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --maxWorkers=1 --forceExit",
    "test:unit": "jest --testPathPattern=unit.test.ts",
    "test:integration": "jest --testPathPattern=integration.test.ts --maxWorkers=1",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "notification",
    "email",
    "smtp",
    "gmail",
    "rabbitmq",
    "microservice"
  ],
  "author": "Echo Team",
  "license": "MIT",
  "dependencies": {
    "@echo/http-client": "file:../shared/http-client",
    "@echo/logger": "file:../shared/logger",
    "@echo/metrics": "file:../shared/metrics",
    "@echo/telemetry": "file:../shared/telemetry",
    "amqplib": "^0.10.3",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.11",
    "reflect-metadata": "^0.2.1",
    "tsyringe": "^4.8.0",
    "uuid": "^13.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^7.0.4",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.3.3"
  }
}
