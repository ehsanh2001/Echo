{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "Echo notification service - handles email notifications via Resend",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "notification",
    "email",
    "resend",
    "rabbitmq",
    "microservice"
  ],
  "author": "Echo Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "amqplib": "^0.10.3",
    "resend": "^4.0.0",
    "handlebars": "^4.7.8",
    "axios": "^1.6.2",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "tsyringe": "^4.8.0",
    "reflect-metadata": "^0.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/amqplib": "^0.10.4",
    "@types/node": "^20.10.4",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.1"
  }
}
