# =============================================================================
# User Service - Service-Specific Configuration
# =============================================================================
# Inherits shared variables from /echo/.env
# Only service-specific overrides should be defined here


# =============================================================================
# SERVICE IDENTITY
# =============================================================================
SERVICE_NAME=user-service
PORT=8001


# =============================================================================
# DATABASE (Service-specific database)
# =============================================================================
# Uses POSTGRES_* credentials from project .env
DB_NAME=users_db
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${DB_NAME}
DATABASE_URL_TEST=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${DB_NAME}_test


# =============================================================================
# SERVICE-SPECIFIC SETTINGS
# =============================================================================
BCRYPT_SALT_ROUNDS=12