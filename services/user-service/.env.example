# User Service - Service-Specific Configuration
# Inherits shared variables from /echo/.env

# Service-specific Database
DB_NAME=users_db
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/users_db
DATABASE_URL_TEST=postgresql://postgres:postgres@localhost:5432/users_db_test

# Service Port
PORT=8001

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY_SECONDS=900        # 15 minutes in seconds
JWT_REFRESH_TOKEN_EXPIRY_SECONDS=604800    # 7 days in seconds

# Service-specific settings
SERVICE_NAME=user-service