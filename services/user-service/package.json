{
  "name": "user-service",
  "version": "1.0.0",
  "description": "Echo User Service - Authentication and user management",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx prisma generate && tsup",
    "build:tsc": "npx prisma generate && tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=unit.test.ts",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=integration.test.ts",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:unit:watch": "cross-env NODE_ENV=test jest --watch --testPathPattern=unit.test.ts",
    "test:setup": "./setup-test-db.sh",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "db:setup": "./setup-db.sh"
  },
  "dependencies": {
    "@echo/logger": "file:../shared/logger",
    "@echo/metrics": "file:../shared/metrics",
    "@echo/telemetry": "file:../shared/telemetry",
    "@prisma/client": "^6.16.2",
    "@types/bcryptjs": "^3.0.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "redis": "^5.8.2",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prisma": "^6.16.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "microservice",
    "authentication",
    "user-management",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
