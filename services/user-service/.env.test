# =============================================================================
# User Service - Test Environment Configuration  
# =============================================================================
# These values override .env for integration tests
# Run tests with: npm run test:integration

SERVICE_NAME=user-service
PORT=8001
NODE_ENV=test

# Database - use test database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/users_db_test

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev-redis-password
REDIS_URL=redis://:dev-redis-password@localhost:6379

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=dev-rabbitmq-password
RABBITMQ_URL=amqp://admin:dev-rabbitmq-password@localhost:5672
RABBITMQ_EXCHANGE=echo.events

# JWT
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY_SECONDS=900
JWT_REFRESH_TOKEN_EXPIRY_SECONDS=604800

# Security
BCRYPT_SALT_ROUNDS=10

# Frontend
FRONTEND_URL=http://localhost:3000
