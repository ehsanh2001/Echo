# Message Service - Service-Specific Configuration
# Inherits shared variables from /echo/.env

# Service-specific Database
DB_NAME=message_db
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/message_db
DATABASE_URL_TEST=postgresql://postgres:postgres@localhost:5432/message_db_test

# RabbitMQ Configuration (uses credentials from project-level .env)
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=message

# Service Port
PORT=8003

# JWT Configuration (for token verification)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# Service-specific settings
SERVICE_NAME=message-service

# External Service URLs
USER_SERVICE_URL=http://localhost:8001
WORKSPACE_CHANNEL_SERVICE_URL=http://localhost:8002

# Redis Configuration (shared instance with service prefix)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=dev-redis-password
REDIS_KEY_PREFIX=msg:

# Message Configuration
MAX_MESSAGE_LENGTH=1024
MAX_ATTACHMENT_SIZE=10485760
MAX_THREAD_DEPTH=5
