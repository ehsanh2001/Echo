# =============================================================================
# BFF Service - Service-Specific Configuration
# =============================================================================
# Inherits shared variables from /echo/.env
# Only service-specific overrides should be defined here


# =============================================================================
# SERVICE IDENTITY
# =============================================================================
SERVICE_NAME=bff-service
PORT=8004


# =============================================================================
# REDIS (Service-specific prefix)
# =============================================================================
# Uses REDIS_URL from project .env
REDIS_KEY_PREFIX=bff:


# =============================================================================
# SOCKET.IO CONFIGURATION
# =============================================================================
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000


# =============================================================================
# RATE LIMITING (can override project defaults)
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
