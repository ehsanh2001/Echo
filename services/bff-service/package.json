{
  "name": "bff-service",
  "version": "1.0.0",
  "description": "Echo BFF Service - Backend For Frontend orchestration layer with WebSocket support",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "build:tsc": "tsc",
    "dev": "ts-node  --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "cross-env NODE_ENV=test jest --maxWorkers=1 --forceExit",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=unit.test.ts",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=integration.test.ts --maxWorkers=1",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@echo/http-client": "file:../shared/http-client",
    "@echo/logger": "file:../shared/logger",
    "@echo/metrics": "file:../shared/metrics",
    "@echo/telemetry": "file:../shared/telemetry",
    "@socket.io/redis-adapter": "^8.3.0",
    "amqplib": "^0.10.9",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "redis": "^5.8.2",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1",
    "tsyringe": "^4.10.0",
    "uuid": "^9.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "",
  "license": "ISC"
}
